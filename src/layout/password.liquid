<!DOCTYPE html>
<html class="supports-fontface" lang="{{ shop.locale }}">
  <head>
    <meta charset="UTF-8">
    <title>
      {{ shop.name }}
    </title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1">

    {% if settings.favicon %}
      <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png" />
    {% endif %}
    {% if settings.shortcut_icon_256 != blank %}
      <link rel="shortcut icon" type="image/x-icon" href="{{ settings.shortcut_icon_256 | img_url: '256x256' }}" />
    {% endif %}
    {% if settings.shortcut_icon_192 != blank %}
      <link rel="icon" sizes="192x192" href="{{ settings.shortcut_icon_192 | img_url: '192x192' }}" />
    {% endif %}
    {% if settings.apple_touch_icon_114 != blank %}
      <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ settings.apple_touch_icon_114 | img_url: '114x114' }}" />
    {% endif %}
    {% if settings.apple_touch_icon_72 != blank %}
      <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ settings.apple_touch_icon_72 | img_url: '72x72' }}" />
    {% endif %}
    {% if settings.apple_touch_icon_57 != blank %}
      <link rel="apple-touch-icon-precomposed" sizes="57x57" href="{{ settings.apple_touch_icon_57 | img_url: '57x57' }}" />
    {% endif %}

    {% include 'social-meta-tags' %}

    <!-- CSS ================================================== -->
    {{ 'timber.scss.css' | asset_url | stylesheet_tag }}
    {{ 'theme.scss.css' | asset_url | stylesheet_tag }}

    {{ content_for_header }}

    <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>

    <!-- JS ================================================== -->
    {{ 'modernizr.min.js' | asset_url | script_tag }}
    <script>
      window.password = window.password || {};

      var password = {
        strings: {
          pageClose: {{ 'general.password_page.close' | t | json }}
        }
      }

      window.theme = window.theme || {};
      theme.strings = {
        addressError: {{ 'home_page.map.address_error' | t | json }},
        addressNoResults: {{ 'home_page.map.address_no_results' | t | json }},
        addressQueryLimit: {{ 'home_page.map.address_query_limit_html' | t | json }},
        authError: {{ 'home_page.map.auth_error_html' | t | json }}
      };
      theme.settings = {
        cartType: {{ settings.cart_type | json }}
      };
    </script>

    {{ 'jquery-2.2.3.min.js' | asset_url | script_tag }}

  </head>

  <body class="template-password">

    <div class="password-page__wrapper">
      {{ content_for_layout }}

      <footer class="password-page__footer" role="contentinfo">
        <div class="password-page__footer_inner">
        </div>
      </footer>
    </div>

    <div id="LoginModal" class="password-page__login-form text-center mfp-hide">
      <p class="h4">{{ 'general.password_page.login_form_heading' | t }}</p>
      {% form 'storefront_password' %}
      {{ form.errors | default_errors }}
      <label for="password" class="hidden-label">{{ 'general.password_page.login_form_password_label' | t }}</label>
      <div class="input-group">
        <input type="password" name="password" id="password" class="input-group-field" placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}" autofocus>
        <span class="input-group-btn">
          <input type="submit" class="btn password-page__login-form__submit" value="{{ 'general.password_page.login_form_submit' | t }}">
        </span>
      </div>
      {% endform %}
      <p class="admin-login">{{ 'general.password_page.admin_link_html' | t }}</p>
    </div>

  </body>
</html>
